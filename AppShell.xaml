<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Net8Perf.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Net8Perf"
    xmlns:views="clr-namespace:Net8Perf.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Net8Perf">

    <TabBar Route="main">
        <Tab Title="Main"
            Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="SecondTab"
     Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:SecondView}" />
        </Tab>


    </TabBar>

</Shell>
